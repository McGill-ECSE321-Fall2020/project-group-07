<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/registrationTitle"
        android:layout_width="172dp"
        android:layout_height="26dp"
        android:lineSpacingExtra="24sp"
        android:text=" Registration Form"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="110dp"
        tools:layout_editor_absoluteY="58dp" />

    <EditText
        android:id="@+id/passwordInput"
        android:layout_width="377dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="567dp" />

    <EditText
        android:id="@+id/usernameInput"
        android:layout_width="377dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="120dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lastNameTitle"
        android:layout_width="172dp"
        android:layout_height="26dp"
        android:text="last name"
        android:textSize="14sp"
        android:textStyle="italic"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="314dp" />

    <EditText
        android:id="@+id/lastNameInput"
        android:layout_width="377dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="340dp" />

    <TextView
        android:id="@+id/firstNameTitle"
        android:layout_width="172dp"
        android:layout_height="26dp"
        android:text="first name"
        android:textSize="14sp"
        android:textStyle="italic"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="208dp" />

    <TextView
        android:id="@+id/passwordTitle"
        android:layout_width="172dp"
        android:layout_height="26dp"
        android:text="password"
        android:textSize="14sp"
        android:textStyle="italic"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="541dp" />

    <EditText
        android:id="@+id/firstNameInput"
        android:layout_width="377dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="232dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/emailTitle"
        android:layout_width="172dp"
        android:layout_height="26dp"
        android:text="email"
        android:textAllCaps="false"
        android:textSize="14sp"
        android:textStyle="italic"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="425dp" />

    <EditText
        android:id="@+id/emailInput"
        android:layout_width="377dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="451dp" />

    <TextView
        android:id="@+id/usernameTitle"
        android:layout_width="172dp"
        android:layout_height="26dp"
        android:text="username"
        android:textSize="14sp"
        android:textStyle="italic"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="96dp" />

    <Button
        android:id="@+id/registerButton"
        android:layout_width="110dp"
        android:layout_height="61dp"
        android:onClick="createRegistration"
        android:text="REGISTER"
        android:textStyle="bold"
        app:backgroundTint="#3F51B5"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="712dp" />

    <Button
        android:id="@+id/clearButton"
        android:layout_width="89dp"
        android:layout_height="61dp"
        android:onClick="startClear"
        android:text="CLEAR"
        android:textStyle="bold"
        app:backgroundTint="#CA1212"
        tools:layout_editor_absoluteX="288dp"
        tools:layout_editor_absoluteY="712dp" />

    <Button
        android:id="@+id/backButton"
        android:layout_width="80dp"
        android:layout_height="42dp"
        android:text="back"
        android:onClick="goBack"
        android:textStyle="bold|italic"
        app:backgroundTint="#8E8A8A"
        tools:layout_editor_absoluteX="13dp"
        tools:layout_editor_absoluteY="16dp" />

    <CheckBox
        android:id="@+id/artistCheck"
        android:layout_width="147dp"
        android:layout_height="55dp"
        android:text="As an Artist"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="639dp" />

    <CheckBox
        android:id="@+id/customerCheck"
        android:layout_width="160dp"
        android:layout_height="55dp"
        android:text="As a Customer"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="202dp"
        tools:layout_editor_absoluteY="639dp" />

</androidx.constraintlayout.widget.ConstraintLayout>