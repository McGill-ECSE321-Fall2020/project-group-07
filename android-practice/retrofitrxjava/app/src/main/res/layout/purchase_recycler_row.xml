<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/purchase_recycler_row"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="8dp"
        card_view:cardElevation="10dp"
        card_view:cardPreventCornerOverlap="false">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="410dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.069"
                tools:srcCompat="@tools:sample/backgrounds/scenic" />

            <TableLayout
                android:layout_width="0dp"
                android:layout_height="380dp"
                android:orientation="vertical"
                android:stretchColumns="1,2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/imageView"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@id/imageView"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.954">

                <TableRow android:layout_weight="1">

                    <TextView
                        android:id="@+id/textView30"
                        android:layout_height="match_parent"
                        android:layout_column="1"
                        android:gravity="left|center"
                        android:text="Artwork:"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/purchase_artwork_name"
                        android:layout_height="match_parent"
                        android:layout_column="2"
                        android:gravity="right|center"
                        android:text="Woman with a Parasol"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small" />
                </TableRow>

                <TableRow android:layout_weight="1">

                    <TextView
                        android:id="@+id/textView31"
                        android:layout_height="match_parent"
                        android:layout_column="1"
                        android:gravity="left|center"
                        android:text="Artist:"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/purchase_artist_name"
                        android:layout_height="match_parent"
                        android:layout_column="2"
                        android:gravity="right|center"
                        android:text="edgardegars"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small" />
                </TableRow>

                <TableRow android:layout_weight="1">

                    <TextView
                        android:id="@+id/textView32"
                        android:layout_height="match_parent"
                        android:layout_column="1"
                        android:gravity="left|center"
                        android:text="Date:"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/purchase_date_purchased"
                        android:layout_height="match_parent"
                        android:layout_column="2"
                        android:gravity="right|center"
                        android:text="2020-11-20"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small" />
                </TableRow>

                <TableRow android:layout_weight="1">

                    <TextView
                        android:id="@+id/textView33"
                        android:layout_height="match_parent"
                        android:layout_column="1"
                        android:gravity="left|center"
                        android:text="Price:"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/purchase_price_value"
                        android:layout_height="match_parent"
                        android:layout_column="2"
                        android:gravity="right|center"
                        android:text="91823891"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small" />
                </TableRow>

                <TableRow android:layout_weight="1">

                    <TextView
                        android:id="@+id/textView34"
                        android:layout_height="match_parent"
                        android:layout_column="1"
                        android:gravity="left|center"
                        android:text="Commission:"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/purchase_commission_value"
                        android:layout_height="match_parent"
                        android:layout_column="2"
                        android:gravity="right|center"
                        android:text="0.55"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small" />
                </TableRow>

                <TableRow android:layout_weight="1">

                    <TextView
                        android:id="@+id/textView35"
                        android:layout_height="match_parent"
                        android:layout_column="1"
                        android:gravity="left|center"
                        android:text="Shipment:"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/purchase_shipment_type"
                        android:layout_height="match_parent"
                        android:layout_column="2"
                        android:gravity="right|center"
                        android:text="OFFSITE_DELIVERY"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small" />
                </TableRow>

            </TableLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>